<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:padding="5dp">
        <TextView
            android:layout_gravity="center"
            android:id="@+id/order_shopname"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百康云大药房"
            android:textSize="19sp"/>

        <TextView
            android:layout_marginLeft="450px"
            android:layout_gravity="center"
            android:id="@+id/order_delect"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="19sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/order_number"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BKYS_201708181016104777"
        android:textSize="19sp"/>
    <bai.kang.yun.zxd.mvp.ui.view.Search_View
        android:id="@+id/goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </bai.kang.yun.zxd.mvp.ui.view.Search_View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:padding="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="商品总价："
            android:textSize="19sp"/>
        <TextView
            android:id="@+id/allpreact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/darkred"
            android:textSize="19sp"
            android:text="￥8"/>
        <Button
            android:visibility="gone"
            android:padding="2dp"
            android:id="@+id/btn_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:textColor="@color/white"
            android:text="上传处方单"/>
        <Button
            android:padding="2dp"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_zf"
            android:layout_gravity="right"
            android:background="@color/select_light_red"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="付款"/>
        <Button
            android:padding="2dp"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_cancel"
            android:layout_gravity="right"
            android:background="@color/beige"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"/>
        <Button
            android:padding="2dp"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_sqtk"
            android:layout_gravity="right"
            android:background="@color/beige"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请退款"/>
        <Button
            android:padding="2dp"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:id="@+id/btn_qrsh"
            android:layout_gravity="right"
            android:background="@color/crimson"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认收货"/>
    </LinearLayout>
</LinearLayout>