<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/green"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="5dp"
        android:background="@color/green"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageView
            android:id="@+id/register_back"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"

            android:padding="8dp"
            android:src="@mipmap/android_list_idex_left" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70px"
            android:text="分类"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="20sp"/>




    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:background="@color/white"
        android:padding="10px"
        >
        <ImageView
            android:id="@+id/item_im"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@mipmap/ic_launcher"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快克快克快克快克快克快克快克快克快克快克快克快克"
                android:layout_marginTop="5dp"
                android:textColor="#000"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/goods_factory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京同仁堂股份有限公司"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/goods_abstract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国字健字G20100800"
                android:layout_marginTop="5dp"
                android:textSize="12sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/item_jg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能主治："
                    android:textSize="18sp"
                    android:textColor="@color/darkred"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="开胃消食。食欲不振"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:padding="2dp"
        android:background="#F5F5F5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_zh"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="综合"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC"></View>
        <TextView
            android:id="@+id/tv_jg"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="按价格"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent"
            android:background="#DCDCDC"></View>
        <TextView
            android:id="@+id/tv_xl"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="按销量"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#DCDCDC"></View>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/goodslist_swipeRefreshLayout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15px"
        android:paddingLeft="15px"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/goodslist_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_goodslist"
            />

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>